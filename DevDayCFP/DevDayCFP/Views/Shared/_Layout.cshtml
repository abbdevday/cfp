@using System.Linq
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="yes" name="apple-mobile-web-app-capable">


    <title>DevDay 2015 CFP</title>

    <link href="~/Content/favicon.ico" rel="shortcut icon">

    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome-all.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fonts.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/theme.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/margins.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/parsley.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="wrapper">
        <header id="masthead">
            <nav class="navbar navbar-static-top">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <a href="/" class="brand">
                            <img src="/images/logo_2015.svg" />
                        </a>
                        <div class="nav-collapse collapse">
                            <ul class="nav pull-right">
                                <li><a href="/">Home</a></li>
                                @if (ViewBag.Page.Value.IsAuthenticated)
                                {
                                    <li><a href="/papers">Papers</a></li>
                                    <li><a href="/account/profile">Profile</a></li>

                                    if (Context.CurrentUser.Claims.Contains(DevDayCFP.Common.Consts.Claims.Admin))
                                    {
                                        <li><a href="/allpapers">All Papers</a></li>
                                    }
                                }

                                @Html.Partial("Shared/_LoginPanel")
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>



        <div id="content" role="main">
            <section class="section section-alt section-padded">
                <div class="row-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

    </div>

    <footer id="footer" role="contentinfo">
        <div class="wrapper wrapper-transparent">
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span6 small-screen-center">
                        <h3>
                            DevDay
                        </h3>

                        <p>
                            created with passion and ❤
                            <br>
                            <a href="mailto:contact@devday.pl">contact@devday.pl</a>
                        </p>
                    </div>
                    <div class="span6">
                        <ul class="unstyled inline text-right small-screen-center big social-icons">
                            <li>
                                <a data-iconcolor="#00a0d1" href="http://twitter.com/abbdevday">
                                    <i class="icon-twitter"></i>
                                </a>
                            </li>
                            <li>
                                <a data-iconcolor="#3b5998" href="http://facebook.com/abbdevday">
                                    <i class="icon-facebook"></i>
                                </a>
                            </li>
                            <li>
                                <a data-iconcolor="#910101"
                                   href="https://plus.google.com/b/113103877740934428492/113103877740934428492/posts">
                                    <i class="icon-google-plus"></i>
                                </a>
                            </li>
                            <li>
                                <a data-iconcolor="#910101" href="http://youtube.com/abbdevday">
                                    <i class="icon-youtube"></i>
                                </a>
                            </li>
                            <li>
                                <a data-iconcolor="#910101" href="https://www.flickr.com/photos/96896358@N04/">
                                    <i class="icon-flickr"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

