@using System.Linq
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<DevDayCFP.Models.Paper>

<div class="container-fluid">
    <div class="section-header">
        <h1>Submitted <small class="light">Papers</small></h1>
    </div>

    <div class="row-fluid">
        <div class="span10 offset1">
            <a class="pull-right" href="/allpapers">Back to papers list</a>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span12">
            <h2>@Model.Title</h2>
            <p class="lead">Abstract</p>
            <p>@Model.Abstract</p>
            <p class="lead">Justification</p>
            <p>@Model.Justification</p>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">CFP Details</h3>
                </div>
                <div class="panel-body">
                    <dl>
                        <dt>Level:</dt>
                        <dd>@Model.Level</dd>

                        <dt>Live coding:</dt>
                        <dd>@(Model.LightningTalk ? "Yes" : "No")</dd>

                        <dt>Last modification date:</dt>
                        <dd>@Model.LastModificationDate</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">User details</h3>
                </div>
                <div class="panel-body">
                    <dl >
                        <dt>UserName:</dt>
                        <dd>@Model.User.UserName</dd>

                        <dt>Name:</dt>
                        <dd>@Model.User.Name</dd>

                        <dt>Email:</dt>
                        <dd><a href="mailto:@Model.User.Email">@Model.User.Email</a></dd>
                        
                        <dt>Location:</dt>
                        <dd>@Model.User.Location</dd>
                        
                        <dt>Twitter:</dt>
                        <dd>@Model.User.TwitterHandle</dd>
                        
                        <dt>Website:</dt>
                        <dd>@Model.User.Website</dd>
                    </dl>
                    
                    <dl>
                        <dt>Bio</dt>
                        <dd>@Model.User.Bio</dd>
                    </dl>
                    <dl>
                        <dt>Show off</dt>
                        <dd>@Model.User.ShowOff</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>