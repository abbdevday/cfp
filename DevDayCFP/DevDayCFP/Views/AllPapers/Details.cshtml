@using System.Linq
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<DevDayCFP.Models.Paper>

<div class="section-header">
    <h1>Submitted Papers</h1>
</div>

<div class="row">
    <div class="col-lg-offset-1 col-md-10">
        <a class="pull-right" href="/allpapers">Back to papers list</a>
    </div>
</div>

<div class="row">

    <div class="col-md-offset-1 col-md-7">
        <h2>@Model.Title</h2>
        
        <br/>

        <p class="lead">Abstract</p>
        <p>@Model.Abstract</p>
        
        <br/>

        <p class="lead">Justification</p>
        <p>@Model.Justification</p>
        

    </div>
    
    <div class="col-md-3">
        <div class="row">
            <div class="panel panel-default margin-top-50">
                <div class="panel-heading">
                    <h3 class="panel-title">CFP Details</h3>
                </div>
                <div class="panel-body">
                    <dl>
                        <dt>Level:</dt>
                        <dd>@Model.Level</dd>

                        <dt>Live coding:</dt>
                        <dd>@(Model.IsThereLiveCoding ? "Yes" : "No")</dd>

                        <dt>Last modification date:</dt>
                        <dd>@Model.LastModificationDate</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">User details</h3>
                </div>
                <div class="panel-body">
                    <dl >
                        <dt>UserName:</dt>
                        <dd>@Model.User.UserName</dd>

                        <dt>Name:</dt>
                        <dd>@Model.User.Name</dd>

                        <dt>Email:</dt>
                        <dd><a href="mailto:@Model.User.Email">@Model.User.Email</a></dd>
                        
                        <dt>Location:</dt>
                        <dd>@Model.User.Location</dd>
                        
                        <dt>Twitter:</dt>
                        <dd>@Model.User.TwitterHandle</dd>
                        
                        <dt>Website:</dt>
                        <dd>@Model.User.Website</dd>
                    </dl>
                    
                    <dl>
                        <dt>Bio</dt>
                        <dd>@Model.User.Bio</dd>
                    </dl>
                    <dl>
                        <dt>Show off</dt>
                        <dd>@Model.User.ShowOff</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts {
    <script type="text/javascript">

    </script>
}